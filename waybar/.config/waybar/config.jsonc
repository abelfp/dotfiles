        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "on-click": "mpc toggle",
        "on-click-right": "mpc next",
        "on-click-middle": "mpc random",
        "tooltip-format": "{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ÔÄÅ",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },

